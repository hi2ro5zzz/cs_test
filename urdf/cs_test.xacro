<?xml version="1.0"?>
<robot name="cs_test" xmlns:xacro="http://www.ros.org/wiki/xacro">

<link name="world"/>

    <joint name="joint1" type="fixed">
      <axis xyz="0 0 0"/>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <parent link="world"/>
      <child link="base1"/>
    </joint>  

<link name="base1">
    <visual>
        <origin xyz="0 0 0.6" rpy="0 0 0"/>
      <geometry>
        <mesh filename="package://cs_test/models/box.dae"/>
      </geometry>
    </visual>

    <collision name="base1">
        <origin xyz="0 0 0.6" rpy="0 0 0"/>
      <geometry>
        <mesh filename="package://cs_test/models/box.dae"/>
      </geometry>
    </collision>

    <inertial>
        <origin xyz="0 0 0.6" rpy="0 0 0"/>
        <mass value="1"/>
        <inertia ixx="0.083"  ixy="0"  ixz="0" iyy="0.083" iyz="0" izz="0.083"/>
    </inertial>
</link> 

    <joint name="joint2" type="fixed">
      <axis xyz="0 0 0"/>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <parent link="world"/>
      <child link="base2"/>
    </joint>

<link name="base2">
    <visual>
        <origin xyz="3 3 0.1" rpy="0 0 0"/>
      <geometry>
        <mesh filename="package://cs_test/models/box.dae" scale="1 1 0.01"/>
      </geometry>
    </visual>

    <collision name="base2">
        <origin xyz="3 3 0.1" rpy="0 0 0"/>
      <geometry>
        <mesh filename="package://cs_test/models/box.dae" scale="1 1 0.01"/>
      </geometry>
    </collision>

    <inertial>
        <origin xyz="3 3 0.1" rpy="0 0 0"/>
        <mass value="1"/>
        <inertia ixx="0.083"  ixy="0"  ixz="0" iyy="0.083" iyz="0" izz="0.083"/>
    </inertial>
</link>   

<gazebo reference="base1">
    <mu1 value="200" />
    <mu2 value="100" />
    <selfCollide>true</selfCollide>
    <sensor name="contact_sensor" type="contact">
    <always_on>true</always_on>
    <update_rate>100.0</update_rate>
    <contact>
      <collision>base1_collision</collision>
    </contact>
    <plugin name="cs_sub" filename="libcs_sub.so">
      <bumperTopicName>state1</bumperTopicName>
      <frameName>world</frameName>
    </plugin>
   </sensor>
</gazebo>

<gazebo reference="base2">
    <mu1 value="200" />
    <mu2 value="100" />
    <selfCollide>true</selfCollide>
    <sensor name="contact_sensor" type="contact">
    <always_on>true</always_on>
    <update_rate>100.0</update_rate>
    <contact>
      <collision>base2_collision</collision>
    </contact>
    <plugin name="cs_sub" filename="libcs_sub.so">
      <bumperTopicName>state2</bumperTopicName>
      <frameName>world</frameName>
    </plugin>
   </sensor>
</gazebo>

</robot>
